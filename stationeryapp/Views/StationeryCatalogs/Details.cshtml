        <dd>
            @Html.DisplayFor(model => model.SupplierList1.SupplierName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.SupplierList2.SupplierName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.SupplierList2.SupplierName)
        </dd>

    </dl>
</div>

<table class="table">

    <tr>
        <th>Date</th>
        <th>Department/Supplier</th>
        <th>Qty</th>
        <th>Balance</th>
    </tr>

    @foreach (var item in ViewBag.history)
    {
        <tr>
            <td>@item.date</td>
            <td>@item.name</td>
            <td>@item.quantity</td>
            <td>@(balance += item.quantity) </td>
        </tr>
    }

</table>

<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.ItemNumber,sessionId=sessionId}) |
    @Html.ActionLink("Back to List", "Index", new { sessionId = sessionId })
</p>
