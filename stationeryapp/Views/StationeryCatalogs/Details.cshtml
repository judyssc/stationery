@model stationeryapp.Models.StationeryCatalog

@{
    ViewBag.Title = "Stock Card Details";
    string sessionId = (string)ViewData["sessionId"];
    string username = (string)ViewData["username"];
    int balance = 0;
}

<h2>Stock Card</h2>

